# ============================================
# MUCI-SUPERMAN v2.0 - Environment Configuration
# ============================================

# Server
PORT=3000
API_VERSION=v1
ALLOWED_ORIGINS=*
RATE_LIMIT=200

# Database
DB_PATH=./data/muci-superman.db

# Features
ENABLE_CACHING=true
ENABLE_COST_TRACKING=true

# ============================================
# AUTHENTICATION
# ============================================
REQUIRE_AUTH=false
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=24h
ADMIN_USER=admin
ADMIN_PASS=change-this-password

# ============================================
# AI PROVIDERS (Required)
# ============================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=AIza...

# Optional AI Providers
# XAI_API_KEY=xai-...
# GOOGLE_AI_API_KEY=AIza...

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================

# Sipgate (Telefonie)
# SIPGATE_TOKEN_ID=token-xxx
# SIPGATE_TOKEN=xxxxxxxx
# SIPGATE_PHONE_NUMBER=+49123456789
# SIPGATE_DEVICE_ID=p0

# Twilio (SMS, WhatsApp)
# TWILIO_ACCOUNT_SID=ACxxxx
# TWILIO_AUTH_TOKEN=xxxx
# TWILIO_PHONE_NUMBER=+1234567890

# Voice (STT/TTS) - Uses OPENAI_API_KEY by default
# ELEVENLABS_API_KEY=xxxx
# ELEVENLABS_VOICE_ID=xxxx
# AZURE_SPEECH_KEY=xxxx
# AZURE_SPEECH_REGION=westeurope

# Meta Graph (Facebook/Instagram)
# META_ACCESS_TOKEN=xxxx
# META_PAGE_ID=xxxx
# META_INSTAGRAM_ACCOUNT_ID=xxxx
# META_APP_SECRET=xxxx

# ============================================
# LOGGING
# ============================================
# LOG_LEVEL=info
# ERROR_WEBHOOK_URL=https://your-webhook.com/errors
